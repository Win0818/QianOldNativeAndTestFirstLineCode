<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianft.m.qian.fragment.AccountFragment">

    <com.qianft.m.qian.view.TopBar
        android:id="@+id/my_account_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:title="我的账户"
        custom:titleTextSize="10sp"
        custom:titleTextColor="@color/black_light">
    </com.qianft.m.qian.view.TopBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/color_0176da">
        <TextView
            android:id="@+id/available_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用金额 / 元"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/available_money_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/available_money_tv"
            android:layout_alignLeft="@id/available_money_tv"
            android:layout_marginTop="10dp"
            android:text="0.00"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/account_sum_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/available_money_value"
            android:layout_alignLeft="@id/available_money_value"
            android:layout_marginTop="20dp"
            android:text="账户总金额 / 元"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/account_sum_money_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_sum_money_tv"
            android:layout_alignLeft="@id/account_sum_money_tv"
            android:layout_marginTop="10dp"
            android:text="0.0000"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/user_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_head_image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="你好，钱富通！"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_tv"
            android:layout_marginTop="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="充值>>"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none" >
        <com.qianft.m.qian.view.MyGridView
            android:id="@+id/my_account_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:listSelector="@null"
            android:verticalSpacing="0.0dip"
            android:horizontalSpacing="0.0dip"
            android:numColumns="4">
        </com.qianft.m.qian.view.MyGridView>
    </ScrollView>
</LinearLayout>
