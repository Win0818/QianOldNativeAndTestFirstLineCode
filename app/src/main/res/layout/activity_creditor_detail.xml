<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_creditor_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianft.m.qian.activity.CreditorDetailActivity">

    <com.qianft.m.qian.view.TopBar
        android:id="@+id/creditor_detail_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:title="债权宝详情"
        custom:titleTextSize="10sp"
        custom:leftBackground="@mipmap/back_ico"
        custom:titleTextColor="@color/black_light">
    </com.qianft.m.qian.view.TopBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/pledge_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/tyj_02"/>

                <ImageView
                    android:id="@+id/insurance_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/pledge_icon"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/tyj_03"/>
                <ImageView
                    android:id="@+id/house_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_alignLeft="@id/insurance_icon"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/tyj_04"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_alignLeft="@id/house_icon"
                    android:layout_centerVertical="true"
                    android:text="房系列第000期-00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_qianft"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:text="招标中"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/detail_annual_interest_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="年利率"/>
                <TextView
                    android:id="@+id/detail_annual_interest_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_annual_interest_tv"
                    android:layout_marginLeft="20dp"
                    android:text="16.00%"/>
                <TextView
                    android:id="@+id/detail_time_limit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/detail_annual_interest_tv"
                    android:layout_marginLeft="30dp"
                    android:text="期限"/>
                <TextView
                    android:id="@+id/detail_time_limit_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_time_limit_text"
                    android:layout_toRightOf="@id/detail_annual_interest_tv"
                    android:layout_marginLeft="25dp"
                    android:text="180天"/>

                <TextView
                    android:id="@+id/detail_sum_fund_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_annual_interest_value"
                    android:text="项目金额"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/detail_sum_fund_tv"
                    android:layout_below="@id/detail_time_limit_value"
                    android:text="200000.00元"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/pricipal_interest_protection_plan_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_sum_fund_tv"
                    android:layout_centerVertical="true"
                    android:text="100%本息保障计划"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
