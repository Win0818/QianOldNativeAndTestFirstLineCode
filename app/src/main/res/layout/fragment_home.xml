<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/topbar_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/logo"/>
    </RelativeLayout>
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/rl_home_fragment_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/banner_home_content"
                style="@style/BannerDefaultStyle"
                app:banner_pageChangeDuration="1000"
                app:banner_pointAutoPlayAble="false"
                app:banner_pointContainerBackground="@android:color/transparent"
                app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
                app:banner_pointTopBottomMargin="10dp"
                app:banner_transitionEffect="zoom" />
        </LinearLayout>
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/invest_sum_fund_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="平台投资总额(元)"/>
        <TextView
            android:id="@+id/invest_sum_fund_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/invest_sum_fund_tv"
            android:text="100000000000"/>

        <TextView
            android:id="@+id/gain_sum_fund_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="累计为用户赚取(元)"/>
        <TextView
            android:id="@+id/gain_sum_fund_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/gain_sum_fund_tv"
            android:layout_below="@id/gain_sum_fund_tv"
            android:textColor="@color/red"
            android:text="100000000000"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/experience_object_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/index_z01"/>
            <TextView
                android:id="@+id/experience_object_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/experience_object_iv"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="体验标"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/experience_object_tv"
                android:layout_below="@id/experience_object_tv"
                android:textSize="10sp"
                android:text="新手福利专享"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_marginRight="18dp"
                android:padding="5dp"
                android:text="加入"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/crdit_object_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/index_z02"/>
            <TextView
                android:id="@+id/crdit_object_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/crdit_object_iv"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="债权宝"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/crdit_object_tv"
                android:layout_below="@id/crdit_object_tv"
                android:textSize="10sp"
                android:text="方标，车标，安全， 收益高"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_marginRight="18dp"
                android:padding="5dp"
                android:text="加入"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/auto_insurance_iv"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/safecar_home"/>
            <TextView
                android:id="@+id/auto_insurance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/auto_insurance_iv"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="车险投保"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/auto_insurance_tv"
                android:layout_below="@id/auto_insurance_tv"
                android:textSize="10sp"
                android:text="人人投保，即享返现"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_marginRight="18dp"
                android:padding="5dp"
                android:text="加入"/>
        </RelativeLayout>

    </LinearLayout>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar_home"
        android:orientation="vertical">
        <com.qianft.m.qian.view.MyWebView
            android:id="@+id/mywebview_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.qianft.m.qian.view.MyWebView>
    </LinearLayout>-->

</LinearLayout>
